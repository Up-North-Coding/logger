{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": ["standard", "plugin:json/recommended", "prettier", "prettier/prettier"],
    "parserOptions": {
        "ecmaVersion": 12,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4,
            {
                "VariableDeclarator": "first",
                "ObjectExpression": "first"
            }
        ],
        "no-multi-spaces": [
            "error",
            {
                "exceptions": {
                    "VariableDeclarator": true,
                    "Property": true
                }
            }
        ],
        "semi": ["error", "always"],
        "strict": ["error", "global"],
        "camelcase": [0, "never"]
    }
}
